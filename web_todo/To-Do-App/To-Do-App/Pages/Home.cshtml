@model To_Do_App.Pages.HomeModel
@{ ViewData["Title"] = "Home";
    Layout = null; }


<h1>Todo List</h1>

@for (int i = 0; i < Model.Items.Count; i++)
{
    int index = i + 1;

<form method="post">

    <td>*</td>
    
    <td>
        @Html.DisplayFor(modelItem => Model.Items.ElementAt(i).Todo)<br />
    </td>
    
    <td>
        <input type="hidden" name="id" value="@Model.Items.ElementAt(i).Id" />
        <input type="submit" value="Done!" asp-page-handler="Submit" />
    </td>
   <button><a asp-page="./AddToDo" asp-route-id="@Model.Items.ElementAt(i).Id">Update</a></button> 
    <br />
    <br />
</form>
}

<a asp-page="./AddToDo">Add Todo</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
